        <Button IsCancel="True" Content="Sair" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="394,255,0,0" Click="Button_Click_1"/>
        <Label Foreground="White" Content="Sistema de RPG 3D&amp;T Alpha " HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,288,0,0" FontSize="22"/>
        <Image MouseDown="click_MouseLeftButtonDown" HorizontalAlignment="Left" Height="122" VerticalAlignment="Top" Width="169" Margin="171,139,0,0" Source="Imagens/unnamed.png">
            <Image.Effect>
                <DropShadowEffect Color="#FFEFEFF2" BlurRadius="500"/>
            </Image.Effect>
        </Image>

    </Grid>
</Window>
