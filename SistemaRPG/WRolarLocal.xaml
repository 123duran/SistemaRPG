        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Rolar dados" Height="327.068" Width="501.88">
    <Grid Margin="0,0,-8,-5">
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black" Offset="1"/>
                <GradientStop Color="White"/>
            </LinearGradientBrush>
        </Grid.Background>
        <RadioButton x:Name="rbD20" Content="D20" HorizontalAlignment="Left" Margin="215,49,0,0" VerticalAlignment="Top" FontSize="20" BorderThickness="3"/>
        <RadioButton x:Name="rbD6" Content="D6" HorizontalAlignment="Left" Margin="215,85,0,0" VerticalAlignment="Top" FontSize="20" BorderThickness="3"/>
