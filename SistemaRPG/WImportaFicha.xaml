<Window x:Class="SistemaRPG.WImportaFicha"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Importar Fichas" Height="295" Width="444" FontStyle="Italic" HorizontalAlignment="Center" HorizontalContentAlignment="Center">
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
            <GradientStop Color="Black" Offset="0.393"/>
            <GradientStop Color="White" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black" Offset="1"/>
                <GradientStop Color="#FFEFEFF2"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Button Content="Procurar" Margin="233,56,0,0" Click="Button_Click_1" Height="26" VerticalAlignment="Top" HorizontalAlignment="Left" Width="148" TextOptions.TextFormattingMode="Display"/>
        <Button Content="Importar" Margin="233,100,0,0" Height="23" VerticalAlignment="Top" HorizontalAlignment="Left" Width="148" TextOptions.TextFormattingMode="Display"/>
        <TextBox x:Name="txtCaminho" HorizontalAlignment="Left" Height="67" TextWrapping="Wrap" VerticalAlignment="Top" Width="189" Margin="26,56,0,0"/>
        <Label Content="Local da ficha" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="26,30,0,0" Foreground="Black"/>
        <Label Foreground="White" Content="Sistema de RPG 3D&amp;T Alpha " HorizontalAlignment="Left" Margin="10,0,0,17" FontSize="22" Height="39" VerticalAlignment="Bottom"/>
        <Label Foreground="Black" Content="Importação de Ficha de Personagens" HorizontalAlignment="Left" Margin="25,0,0,223" FontSize="22" Height="39" VerticalAlignment="Bottom" Width="375" TextOptions.TextFormattingMode="Display"/>


    </Grid>
</Window>
