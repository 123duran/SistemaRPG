<Window x:Class="SistemaRPG.WNovaAventura"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Criar Nova Aventura" Height="233.763" Width="315.225">
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="Black"/>
            <GradientStop Color="White" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid>
        
        <Label Foreground="White" Content="Senha da aventura " HorizontalAlignment="Left" Margin="39,88,0,0" FontSize="11" Height="36" VerticalAlignment="Top"/>
        <TextBox  HorizontalAlignment="Left" Height="22" TextWrapping="Wrap" VerticalAlignment="Top" Width="96" Margin="153,92,0,0"/>
        <Button Content="Sair" IsCancel="True" HorizontalAlignment="Left" VerticalAlignment="Top" Width="44" Margin="253,173,0,0" Click="Button_Click_1"/>
        <Button IsDefault="True" Content="Nova aventura" HorizontalAlignment="Left" VerticalAlignment="Top" Width="94" Margin="153,132,0,0"/>
        <Label Foreground="White" Content="Aventura número:" HorizontalAlignment="Left" Margin="39,43,0,0" FontSize="11" Height="36" VerticalAlignment="Top"/>
        <Label Foreground="White" Content="0000" HorizontalAlignment="Left" Margin="144,43,0,0" FontSize="11" Height="36" VerticalAlignment="Top"/>

    </Grid>
</Window>
