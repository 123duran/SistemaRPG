        <Label Content="Background" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="471,295,-7,0" Height="26" Width="138"/>
        <TextBox x:Name="txtVan" HorizontalAlignment="Left" Height="187" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Margin="11,326,0,0"/>
        <TextBox x:Name="txtDesv" HorizontalAlignment="Left" Height="187" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Margin="151,326,0,0"/>
