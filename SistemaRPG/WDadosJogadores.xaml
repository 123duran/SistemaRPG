<Window x:Class="SistemaRPG.WDadosJogadores"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Enviar dados aos Jogadores" Height="300" Width="300">
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="Black"/>
            <GradientStop Color="White" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid>
        <Label Foreground="White" Content="Selecione o jogador :" HorizontalAlignment="Left" Margin="10,69,0,0" FontSize="11" Height="36" VerticalAlignment="Top"/>
        <Label Foreground="White" Content="Número de dados :" HorizontalAlignment="Left" Margin="10,118,0,0" FontSize="11" Height="36" VerticalAlignment="Top"/>
        <ComboBox HorizontalAlignment="Left" Margin="127,69,0,0" VerticalAlignment="Top" Width="144"/>
        <ComboBox HorizontalAlignment="Left" Margin="127,120,0,0" VerticalAlignment="Top" Width="75"/>
        <Button Content="Enviar" IsDefault="True" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="207,214,0,0"/>
        <Button IsCancel="True" Content="Sair" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="207,239,0,0" Click="Button_Click_1"/>

    </Grid>
</Window>
