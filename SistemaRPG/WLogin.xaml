<Window x:Class="SistemaRPG.WLogin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="WLogin" Height="300" Width="300">
    <Grid>
        <Button Content="Sair" HorizontalAlignment="Left" Margin="80,206,0,0" VerticalAlignment="Top" Width="75"/>
        <Button Content="Login" HorizontalAlignment="Left" Margin="171,206,0,0" VerticalAlignment="Top" Width="75" Click="btLogin"/>
        <TextBox x:Name="txtEmail" HorizontalAlignment="Left" Height="23" Margin="111,57,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="135"/>
        <TextBox x:Name="txtSenha" HorizontalAlignment="Left" Height="23" Margin="111,103,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="135"/>
        <Label Content="E-mail:" HorizontalAlignment="Left" Margin="56,57,0,0" VerticalAlignment="Top"/>
        <Label Content="Senha:" HorizontalAlignment="Left" Margin="56,103,0,0" VerticalAlignment="Top"/>
        <Label Content="Esqueceu senha?" HorizontalAlignment="Left" Margin="111,131,0,0" VerticalAlignment="Top" FontSize="8"/>
        <Label Content="Cadastre-se" HorizontalAlignment="Left" Margin="194,131,0,0" VerticalAlignment="Top" FontSize="8"/>

    </Grid>
</Window>
